#!/bin/bash

# Wrapper script that adds photos to the portfolio collection
# This is a convenience wrapper around add_to_collection.py

if [ -z "$1" ]; then
  echo "Usage: ./scripts/add-to-portfolio <photo-path> [photo-path...]"
  echo "Example: ./scripts/add-to-portfolio /path/to/photo1.jpg /path/to/photo2.jpg"
  exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
python3 "$SCRIPT_DIR/utils/add_to_collection.py" "portfolio" "$@"
